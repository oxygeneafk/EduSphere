@model List<EduSphere.Models.TeacherViewModel>
@{
    ViewData["Title"] = "Öğretmenler";
}
<div class="academy-card">
    <h1>Öğretmenler</h1>
    @if (Model != null && Model.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Bölüm</th>
                    <th>E-Posta</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>@teacher.Name</td>
                        <td>@teacher.Department</td>
                        <td>@teacher.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-text">Öğretmen kaydı bulunamadı.</div>
    }
</div>