@model EduSphere.Models.Event
@{
    ViewBag.Title = "Etkinlik Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Title</h2>
<p><b>Tarih:</b> @Model.Date.ToString("yyyy-MM-dd")</p>
<p><b>Konum:</b> @Model.Location</p>
<p><b>Açıklama:</b> @Model.Description</p>
<p><b>Ekleyen:</b> @Model.Author</p>
@if(Model.Latitude != 0 && Model.Longitude != 0)
{
    <div id="map" style="height:350px; width:100%;"></div>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY"></script>
    <script>
        function initMap() {
            var loc = { lat: @Model.Latitude, lng: @Model.Longitude };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: loc
            });
            var marker = new google.maps.Marker({ position: loc, map: map });
        }
        window.onload = initMap;
    </script>
}