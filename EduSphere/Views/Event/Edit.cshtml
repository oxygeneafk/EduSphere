@model EduSphere.Models.Event
@{
    ViewBag.Title = "Etkinlik Düzenle";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<h2>Etkinlik Düzenle</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label>Başlık</label>
        <input name="title" class="form-control" value="@Model.Title" required />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <textarea name="description" class="form-control" required>@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input name="date" type="date" class="form-control"
               value="@Model.Date.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label>Konum</label>
        <input name="location" class="form-control" value="@Model.Location" required />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="@Url.Action("Manage", "Event")" class="btn btn-secondary">İptal</a>
</form>