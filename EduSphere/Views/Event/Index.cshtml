@model IEnumerable<EduSphere.Models.Event>
@{
    ViewBag.Title = "Etkinlikler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="event-modal">
    <div class="event-title">Events</div>
    <div class="event-list">
        @foreach (var evt in Model)
        {
            <div class="event-card">
                <span class="event-icon">
                    <svg width="22" height="22" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="1" y="3" width="20" height="16" rx="4" fill="#69b4ff" fill-opacity="0.13" />
                        <path d="M5 7h12" stroke="#69b4ff" stroke-width="1.5" stroke-linecap="round" />
                    </svg>
                </span>
                <div class="event-content">
                    <div class="event-title-row">
                        <span class="event-title-inner">@evt.Title</span>
                    </div>
                    <div class="event-date-location">@evt.Date.ToString("yyyy-MM-dd") | @evt.Location</div>
                    <div class="event-description">@evt.Description</div>
                </div>
            </div>
        }
    </div>
</div>