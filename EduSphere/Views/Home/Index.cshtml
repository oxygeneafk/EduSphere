@{
	ViewBag.Title = "Timeline";
}

<style>
	body {
		margin: 0;
		padding: 0;
		background: url('/images/wallpaper.png') no-repeat center center fixed;
		background-size: cover;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		font-family: Arial, sans-serif;
		background-color: #1c1c1c;
		color: #fff;
		display: flex;
	}

	.sidebar-container {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		width: 250px;
		height: 50vh;
		overflow-y: auto;
		background-color: rgba(70, 70, 70, 0.85);
		border-right: 1px solid #444;
		padding: 20px 15px;
		position: fixed;
		top: 70px;
		left: 0; /*sola tasimak icin kullaniyorum bu ilk kisim */
	}

	.sidebar-logo {
		font-size: 24px;
		font-weight: bold;
		color: #ff1493;
		margin-bottom: 30px;
	}

	.sidebar-menu {
		list-style-type: none;
		width: 100%;
	}

		.sidebar-menu li {
			margin-bottom: 20px;
			width: 100%;
		}

		.sidebar-menu a {
			text-decoration: none;
			color: #fff;
			font-size: 18px;
			font-weight: 500;
			display: flex;
			align-items: center;
			padding: 10px 15px;
			border-radius: 50px;
			transition: background-color 0.3s ease;
		}

			.sidebar-menu a:hover {
				background-color: #ff1493;
				color: #fff;
			}

		.sidebar-menu .active {
			background-color: #ff1493;
			color: #fff;
		}

		.sidebar-menu a i {
			margin-right: 10px;
			font-size: 20px;
		}

	.sidebar-footer {
		margin-top: auto;
		font-size: 14px;
		color: #ccc;
	}

	.content-container {
		margin-left: 270px;
		margin-top: 70px; /* Sidebar yukarıdan 70px aşağı indiği için içerik de buna göre ayarlanmalı */
		padding: 20px;
		flex-grow: 1;
	}



	.tweet-box {
		background: rgba(128, 128, 128, 0.85);
		border-radius: 10px;
		padding: 15px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
		margin-bottom: 20px;
	}

	.tweet-box {
		margin-top: -300px; /* eren tweet box yuksekligini buradan ayarla degeri kucultursen yukari cikar */
	}


		.tweet-box textarea {
			width: 100%;
			border: 1px solid #ff1493;
			border-radius: 8px;
			padding: 10px;
			font-size: 16px;
			margin-bottom: 10px;
			resize: none;
			background-color: #2e2e2e;
			color: white;
		}

		.tweet-box button {
			background-color: #696969;
			color: #ff1493;
			border: none;
			padding: 10px 20px;
			border-radius: 8px;
			cursor: pointer;
			font-size: 16px;
		}

			.tweet-box button:hover {
				background-color: #505050;
			}

	.tweets-container {
		margin-top: 20px;
	}

	.tweet {
		background: rgba(128, 128, 128, 0.85);
		border-radius: 10px;
		padding: 15px;
		margin-bottom: 10px;
		box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
	}

		.tweet p {
			margin: 0;
			font-size: 16px;
			color: #fff;
		}
</style>

<body>
	<div class="sidebar-container">

		<ul class="sidebar-menu">
			<li>
				<a href="/home" class="active">
					<i class="fas fa-home"></i> Home
				</a>
			</li>
			<li>
				<a href="/my-tweets">
					<i class="fas fa-user"></i> My Tweets
				</a>
			</li>
			<li>
				<a href="/notifications">
					<i class="fas fa-bell"></i> Notifications
				</a>
			</li>
			<li>
				<a href="/settings">
					<i class="fas fa-cog"></i> Settings
				</a>
			</li>
		</ul>

	</div>

	<div class="content-container">
		<div class="tweet-box">
			<textarea id="tweetContent" rows="3" placeholder="What's on your mind?"></textarea>
			<button onclick="postTweet()">Tweet</button>
		</div>

		<div class="tweets-container" id="tweetsContainer">
			<!-- Tweetler buraya gelir -->
		</div>
	</div>

	<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

	<script>
		function postTweet() {
			const tweetContent = document.getElementById('tweetContent').value;
			const tweetsContainer = document.getElementById('tweetsContainer');

			if (tweetContent.trim() === '') {
				alert('Tweet content cannot be empty!');
				return;
			}

			const tweet = document.createElement('div');
			tweet.className = 'tweet';
			tweet.innerHTML = `<p>${tweetContent}</p>`;

			tweetsContainer.insertBefore(tweet, tweetsContainer.firstChild);
			document.getElementById('tweetContent').value = '';
		}
	</script>
</body>