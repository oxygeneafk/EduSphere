<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter-Like Sidebar with Tweet</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f8fa;
            display: flex;
            margin: 0;
        }

        .sidebar-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 250px;
            height: 100vh;
            background-color: #ffffff;
            border-right: 1px solid #ddd;
            padding: 20px 15px;
            position: fixed;
        }

        .sidebar-logo {
            font-size: 24px;
            font-weight: bold;
            color: #1da1f2;
            margin-bottom: 30px;
        }

        .sidebar-menu {
            list-style-type: none;
            width: 100%;
        }

        .sidebar-menu li {
            margin-bottom: 20px;
            width: 100%;
        }

        .sidebar-menu a {
            text-decoration: none;
            color: #333;
            font-size: 18px;
            font-weight: 500;
            display: flex;
            align-items: center;
            padding: 10px 15px;
            border-radius: 50px;
            transition: background-color 0.3s ease;
        }

        .sidebar-menu a:hover {
            background-color: #e8f5fd;
            color: #1da1f2;
        }

        .sidebar-menu .active {
            background-color: #1da1f2;
            color: #ffffff;
        }

        .sidebar-menu a i {
            margin-right: 10px;
            font-size: 20px;
        }

        .sidebar-footer {
            margin-top: auto;
            font-size: 14px;
            color: #657786;
        }

        .content-container {
            margin-left: 270px;
            padding: 20px;
            flex-grow: 1;
        }

        .tweet-box {
            background: white;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .tweet-box textarea {
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 10px;
            resize: none;
        }

        .tweet-box button {
            background-color: #1da1f2;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        .tweet-box button:hover {
            background-color: #0d8ddf;
        }

        .tweets-container {
            margin-top: 20px;
        }

        .tweet {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .tweet p {
            margin: 0;
            font-size: 16px;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="sidebar-container">
        <div class="sidebar-logo">
            EduSphere
        </div>
        <ul class="sidebar-menu">
            <li>
                <a href="/home" class="active">
                    <i class="fas fa-home"></i> Home
                </a>
            </li>
            <li>
                <a href="/my-tweets">
                    <i class="fas fa-user"></i> My Tweets
                </a>
            </li>
            <li>
                <a href="/notifications">
                    <i class="fas fa-bell"></i> Notifications
                </a>
            </li>
            <li>
                <a href="/settings">
                    <i class="fas fa-cog"></i> Settings
                </a>
            </li>
        </ul>
        <div class="sidebar-footer">
            © 2025 EduSphere
        </div>
    </div>

    <div class="content-container">
        <div class="tweet-box">
            <textarea id="tweetContent" rows="3" placeholder="What's on your mind?"></textarea>
            <button onclick="postTweet()">Tweet</button>
        </div>

        <div class="tweets-container" id="tweetsContainer">
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <script>
        function postTweet() {
            const tweetContent = document.getElementById('tweetContent').value;
            const tweetsContainer = document.getElementById('tweetsContainer');

            if (tweetContent.trim() === '') {
                alert('Tweet content cannot be empty!');
                return;
            }

            const tweet = document.createElement('div');
            tweet.className = 'tweet';
            tweet.innerHTML = `<p>${tweetContent}</p>`;

            tweetsContainer.insertBefore(tweet, tweetsContainer.firstChild);
            document.getElementById('tweetContent').value = '';
        }
    </script>
</body>
</html>