@model List<EduSphere.Models.Message>
@{
    Layout = "_Layout";
    var toUsername = ViewBag.ToUsername as string;
    var currentUsername = ViewBag.CurrentUsername as string;
}

@section Styles {
    <style>
        body {
            background: #edf2f7;
        }

        .chat-main-container {
            max-width: 450px;
            margin: 50px auto 0 auto;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 4px 24px 0 rgba(0,0,0,0.12);
            padding: 0;
            overflow: hidden;
        }

        .chat-header {
            background: #2d3748;
            color: #fff;
            padding: 18px 24px;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .chat-messages {
            height: 400px;
            overflow-y: auto;
            padding: 24px;
            background: #f7fafc;
        }

        .chat-message-row {
            margin-bottom: 18px;
            display: flex;
            flex-direction: column;
        }

            .chat-message-row.me {
                align-items: flex-end;
            }

        .chat-bubble {
            max-width: 70%;
            padding: 12px 18px;
            border-radius: 16px;
            background: #e2e8f0;
            color: #2d3748;
            font-size: 1rem;
            word-break: break-all;
        }

        .chat-message-row.me .chat-bubble {
            background: #3182ce;
            color: #fff;
        }

        .chat-meta {
            font-size: 0.8rem;
            color: #718096;
            margin-top: 3px;
        }

        .chat-form {
            display: flex;
            gap: 10px;
            padding: 16px 24px;
            background: #fff;
            border-top: 1px solid #e2e8f0;
        }

            .chat-form input[type="text"] {
                border-radius: 10px;
                flex: 1;
            }

            .chat-form button {
                border-radius: 10px;
            }

        .back-btn {
            background: #e2e8f0;
            color: #2d3748;
            border: none;
            border-radius: 10px;
            padding: 6px 16px;
            font-size: 1rem;
            margin-right: 10px;
            text-decoration: none;
        }
    </style>
}

<div class="chat-main-container">
    <div class="chat-header d-flex align-items-center justify-content-between">
        <a asp-action="Index" class="back-btn">&larr;</a>
        <span>@toUsername ile sohbet</span>
        <span></span>
    </div>
    <div class="chat-messages" id="chatBox">
        @foreach (var msg in Model)
        {
            var isMe = msg.FromUsername == currentUsername;
            <div class="chat-message-row @(isMe ? "me" : "")">
                <div class="chat-bubble">
                    @msg.Content
                </div>
                <div class="chat-meta">
                    <span>@(isMe ? "Siz" : msg.FromUsername), @msg.SentAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</span>
                </div>
            </div>
        }
    </div>
    <form asp-action="Send" method="post" class="chat-form">
        <input type="hidden" name="toUsername" value="@toUsername" />
        <input type="text" name="content" class="form-control" placeholder="Mesaj yaz..." autocomplete="off" required />
        <button type="submit" class="btn btn-success">Gönder</button>
    </form>
</div>

@section Scripts {
    <script>
        // Otomatik olarak chat'i en sona kaydır
        var chatBox = document.getElementById("chatBox");
        if (chatBox) chatBox.scrollTop = chatBox.scrollHeight;
    </script>
}