@model List<EduSphere.Models.ChatUser>
@{
    Layout = "_Layout";
    var currentUsername = ViewBag.CurrentUsername as string;
    var searchValue = ViewBag.Search as string ?? "";
    ViewData["Title"] = "Message";
}


<div class="chat-search-container">
    <div class="chat-search-title">Search for user</div>
    <form method="get" asp-action="Index" class="mb-3">
        <input type="text" name="search" placeholder="Search for username or name..." value="@searchValue" class="form-control mb-2" autocomplete="off" />
        <button type="submit" class="btn btn-primary w-100">Ara</button>
    </form>
    @if (Model.Count > 0)
    {
        @foreach (var user in Model)
        {
            <div class="user-chat-card">
                <strong>@user.Name</strong>
                <span class="chat-nickname">(@user.Username)</span>
                <a class="chat-link" asp-action="Chat" asp-route-toUsername="@user.Username">Sohbet</a>
            </div>
        }
    }
    else
    {
        <div class="no-users">User not found!</div>
    }
</div>