@model List<EduSphere.Models.Schedule>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Ders Programları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Ders Programları</h2>
    <a href="@Url.Action("CreateSchedule", "Admin")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Ders Programı
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="row">
        @foreach (var schedule in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">@schedule.Department</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <small class="text-muted">
                                Oluşturulma: @schedule.CreatedAt.ToString("dd.MM.yyyy")<br>
                                Son Güncelleme: @schedule.UpdatedAt.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </p>
                        <div class="mb-2">
                            <strong>Toplam Ders Sayısı:</strong>
                            @schedule.Days.Sum(d => d.Courses.Count)
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="@Url.Action("EditSchedule", "Admin", new { department = schedule.Department })"
                           class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Düzenle
                        </a>
                        <form method="post" action="@Url.Action("DeleteSchedule", "Admin")" class="d-inline"
                              onsubmit="return confirm('Bu ders programını silmek istediğinizden emin misiniz?')">
                            <input type="hidden" name="department" value="@schedule.Department" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle"></i>
        Henüz hiç ders programı oluşturulmamış.
        <a href="@Url.Action("CreateSchedule", "Admin")" class="alert-link">İlk ders programını oluşturun</a>
    </div>
}