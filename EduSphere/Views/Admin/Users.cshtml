@model IEnumerable<EduSphere.Models.User>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewBag.Title = "Kullanıcılar";
}

<h2>Kullanıcılar</h2>
<table class="table table-hover table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Bölüm</th>
            <th>Telefon</th>
            <th>Adres</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Lastname</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>@user.Department</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Adress</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="@Url.Action("EditUser", "Admin", new { id = user.Id })">Düzenle</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>