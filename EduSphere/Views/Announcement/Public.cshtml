@model List<EduSphere.Models.Announcement>
@{
    ViewData["Title"] = "Announcement";
}

<div class="announcement-modal">
    <h2 class="announcement-title">Duyurular</h2>
    <div class="announcement-list">
        @foreach (var duyuru in Model)
        {
            <div class="announcement-card">
                <div class="announcement-header">
                    <span class="announcement-title-inner">@duyuru.Title</span>
                    <span class="announcement-date">@duyuru.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
                <div class="announcement-content">
                    @duyuru.Content
                </div>
            </div>
        }
    </div>
</div>