@{
    ViewBag.Title = "Sign Up";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background: url('/images/wallpaper.png') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }
    .register-container {
        width: 450px;
        margin: 80px auto;
        padding: 30px;
        background: rgba(30, 30, 30, 0.9);
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.6);
    }

        .register-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #ff69b4;
        }

        .register-container input[type="text"],
        .register-container input[type="email"],
        .register-container input[type="password"],
        .register-container textarea {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ff69b4;
            border-radius: 8px;
            box-sizing: border-box;
        }

        .register-container button {
            width: 100%;
            background-color: #2c2c2c;
            color: white;
            padding: 14px;
            margin-top: 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
        }

            .register-container button:hover {
                background-color: #e754a1;
            }
</style>

<div class="register-container">
    <h2>EduSphere Sign Up</h2>

    <form method="post">
        <input type="text" name="name" placeholder="name" required />

        <input type="text" name="lastname" placeholder="lastname" required />

        <input type="text" name="username" placeholder="username" required />

        <input type="email" name="email" placeholder="e-mail" required />

        <input type="text" name="phone" placeholder="phone number" required />

        <textarea name="address" placeholder="adress" rows="3" required></textarea>

        <input type="password" name="password" placeholder="password" required />

        <button type="submit">Sign Up</button>
    
        <p style="text-align:center; margin-top:20px;">
            Do you have an account? <a href="/Account/Login">click to login</a>
        </p>
    </form>
</div>
