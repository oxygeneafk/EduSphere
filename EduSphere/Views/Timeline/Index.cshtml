@model IEnumerable<EduSphere.Models.Tweet>
@{
    ViewData["Title"] = "Timeline";
}

<style>
    .timeline-container {
        max-width: 600px;
        margin: 32px auto;
    }

    /* Register sayfasından alınan stiller */
    .tweet-form {
        margin-bottom: 24px;
        background: rgba(30, 30, 30, 0.9);
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0,0,0,0.6);
    }

        .tweet-form textarea {
            width: 90%;
            padding: 12px;
            margin: 10px 0;
            border: 1px solid #ff69b4;
            border-radius: 8px;
            resize: vertical;
            background-color: #2e2e2e;
            color: white;
            font-size: 15px;
        }

        .tweet-form button {
            width: 100%;
            padding: 14px;
            background-color: #ff69b4;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 10px;
        }

            .tweet-form button:hover {
                background-color: #e754a1;
            }

    .tweet-list {
        list-style: none;
        padding: 0;
    }

    .tweet-item {
        background: rgba(128, 128, 128, 0.85);
        border-radius: 10px;
        margin-bottom: 16px;
        padding: 16px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .tweet-meta {
        font-size: 0.91em;
        color: #eee;
        margin-bottom: 4px;
    }

    .tweet-username {
        font-weight: bold;
        color: #fff;
    }

    .tweet-date {
        float: right;
        color: #ccc;
        font-size: 0.88em;
    }

    .tweet-text {
        color: #fff;
        font-size: 16px;
        margin-top: 5px;
    }

    .system-message {
        color: #ff4c4c;
        margin-bottom: 12px;
    }
</style>

<div class="timeline-container">
    <h2 style="color: #ff69b4; text-align:center;">Timeline</h2>

    <form class="tweet-form" asp-action="Create" asp-controller="Timeline" method="post" enctype="multipart/form-data">
        <textarea name="text" maxlength="280" placeholder="What's on your mind?" required></textarea>
        <input type="file" name="media" accept="image/*,video/*" />
        <button type="submit">Tweet</button>
    </form>


    <ul class="tweet-list">
        @foreach (var tweet in Model)
        {
            <li class="tweet-item">
                <div class="tweet-meta" style="display: flex; justify-content: space-between; align-items: center;">
                    <div style="display: flex; flex-direction: column;">
                        <span class="tweet-username">@tweet.Name</span>
                        <span style="color: #ccc; font-size: 0.9em;">@tweet.Username</span>
                    </div>
                    <span class="tweet-date" style="color: #ccc; font-size: 0.9em;">
                        @tweet.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")

                    </span>
                </div>

                <div class="tweet-text">
                    @tweet.Text
                </div>

                @* Medya varsa göster *@
                @if (tweet.MediaData != null && tweet.MediaType != null)
                {
                    var base64 = Convert.ToBase64String(tweet.MediaData);
                    if (tweet.MediaType.StartsWith("image"))
                    {
                        <img src="data:@tweet.MediaType;base64,@base64" style="max-width: 100%; border-radius: 8px; margin-top: 10px;" />
                    }
                    else if (tweet.MediaType.StartsWith("video"))
                    {
                        <video controls style="max-width: 100%; border-radius: 8px; margin-top: 10px;">
                            <source src="data:@tweet.MediaType;base64,@base64" type="@tweet.MediaType" />
                            Tarayıcınız video etiketini desteklemiyor.
                        </video>
                    }
                }

            </li>
        }
       
