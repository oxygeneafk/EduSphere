<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - EduSphere Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            background: linear-gradient(180deg, #1867c0 0%, #317deb 100%);
            color: #fff;
            min-height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.8);
                padding: 0.75rem 1rem;
                border-radius: 0;
                transition: all 0.3s;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    color: #fff;
                    background-color: rgba(255, 255, 255, 0.1);
                }

        .main-content {
            margin-left: 250px;
            padding: 0;
        }

        .navbar {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .footer {
            background-color: #f8f9fa;
            color: #6c757d;
            text-align: center;
            padding: 1rem;
            border-top: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <aside class="sidebar">
                <div class="text-center mb-4">
                    <h4>EduSphere Admin</h4>
                </div>
                <nav class="nav flex-column">
                    <a class="nav-link @(ViewBag.Active == "dashboard" ? "active" : "")" href="@Url.Action("Index", "Admin")">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                    <a class="nav-link @(ViewBag.Active == "users" ? "active" : "")" href="@Url.Action("Users", "Admin")">
                        <i class="fas fa-users"></i> Kullanıcılar
                    </a>
                    <a class="nav-link @(ViewBag.Active == "schedules" ? "active" : "")" href="@Url.Action("Schedules", "Admin")">
                        <i class="fas fa-calendar-alt"></i> Ders Programları
                    </a>
                    <a class="nav-link @(ViewBag.Active == "exams" ? "active" : "")" href="@Url.Action("Exams", "Admin")">
                        <i class="fas fa-clipboard-list"></i> Sınav Takvimi
                    </a>
                    <a class="nav-link" href="@Url.Action("Index", "Announcement")">
                        <i class="fas fa-bullhorn"></i> Duyurular
                    </a>
                    <a class="nav-link" href="@Url.Action("Manage", "Event")">
                        <i class="fas fa-calendar-check"></i> Etkinlikler
                    </a>
                    <hr style="border-color: rgba(255,255,255,0.2);">
                    <a class="nav-link" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-home"></i> Ana Sayfa
                    </a>
                    <a class="nav-link" href="@Url.Action("Login", "Account")">
                        <i class="fas fa-sign-out-alt"></i> Çıkış
                    </a>
                </nav>
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid">
                        <span class="navbar-brand">Admin Paneli</span>
                        <span class="navbar-text ms-auto text-secondary">Hoş geldin, admin!</span>
                    </div>
                </nav>
                <div class="container-fluid p-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    <footer class="footer mt-auto">
        EduSphere Admin Panel &copy; @DateTime.Now.Year
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>