<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - EduSphere</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/css/styles.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar-cloud">
        <div class="navbar-content">
            <span class="navbar-brand">EduSphere</span>
            <ul class="navbar-cloud-list">
                <li>
                    <a href="/Home/Index" class="cloud-link cloud-efekt-link">
                        Home Page
                        <span class="hover-cloud"></span>
                    </a>
                </li>
                <li>
                    <a href="/Messages" class="cloud-link cloud-efekt-link">
                        Message
                        <span class="hover-cloud"></span>
                    </a>
                </li>
                <li>
                    <a href="/Home/About" class="cloud-link cloud-efekt-link">
                        About
                        <span class="hover-cloud"></span>
                    </a>
                </li>
                <li><a href="/Profile" class="cloud-link">Profil</a></li>
                <!-- Diğer menüleri buraya ekle -->
            </ul>
        </div>
    </nav>
    <div class="body-content">
        @RenderBody()
    </div>
    <script src="~/js/cloudnav.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
